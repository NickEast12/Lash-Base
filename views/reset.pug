extends layout 

block content

        .homepage__main__wrapper 
            .home__inner
                .home__title
                    h1.main__title= title
                    form.reset__form( method="POST")
                            h3(for="password") New Password
                            input.login__input.forgot__input(type="password" name="password")
                            h3(for="password-confirm") Confirm Password
                            input.login__input.forgot__input(type="password" name="password-confirm")
                            input.login_btn(type="submit" value="Reset your password ")  