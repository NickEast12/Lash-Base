mixin getReviews(store)
    form.reviewer(action=`/reviews/${selectedStore._id}`, method="post")
        textarea(name="text" placeholder="Please leave a review...")
        .reviewer__meta
            .reviewer__stars
                each num in [5,4,3,2,1]
                    input(type="radio" required id=`star${num}` name='rating' value=num)
                    label(for=`star${num}`) #{num} 
                        svg(width="20px", height="20px")
                            use(xlink:href="/images/icons/star.svg#starIcon")
            button(type="submit") Submit